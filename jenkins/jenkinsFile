pipeline{
    agent {
        docker{
            image node:latest
            args '-p 3000:3000'
        }
    }
    
    stages{
        stage('install the packages'){
            steps{
                npm install 
            }
        }
        stage('Build'){
            steps{
                set -x
                npm run build
                set +x
            }
        }
        stage('run the application'){
            steps{
                npm start &
                sleep 1
                sh 'echo $! > .pidfile'
                set +x
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                kill $(cat .pidfile)
            }
        }
    }
}
