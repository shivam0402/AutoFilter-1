pipeline{
    agent {
        docker{
            label 'Ec2Node'
            image 'node:16-alpine'
            args '-p 3000:3000'
        }
    }
    
    stages{
        stage('install the packages'){
            steps{
                sh 'npm install'
            }
        }
        stage('Build'){
            steps{
                sh 'npm run build'
            }
        }
        stage('run the application'){
            steps{
                sh 'npm start &'
                sh 'sleep 1'
                sh 'echo $! > .pidfile'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                sh 'kill $(cat .pidfile)'
            }
        }
    }
}
